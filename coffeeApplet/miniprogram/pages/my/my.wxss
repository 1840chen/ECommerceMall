/* 登录面板 */
.login-panel{
  margin-top: 50rpx;
  height: 300rpx;
  display: flex;
  flex-direction:column;
  align-items:center;
}
/*头像图片*/
.login-panel image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
/*昵称和余额区域*/
.login-panel view{
  margin-top: 30rpx;
}

/*列表面板*/
.list-panel{
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx;
  margin: 20rpx;
}
/*列表面板-列表项*/
.list-panel .list-item{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
/*列表面板-图片*/
.list-panel image{
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 20rpx;
}
/*列表面板-文本*/
.list-panel text{
  flex-grow: 1;
}